<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8b8b8"
    android:gravity="fill"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:background="#888888"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:visibility="invisible" />

            <RadioGroup
                android:id="@+id/rgAnswerGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvQuestion"
                android:layout_marginTop="10dp"
                android:visibility="invisible">

                <RadioButton
                    android:id="@+id/rbAnswer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#888888"
                    android:checked="false"
                    android:text="RadioButton"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rbAnswer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#888888"
                    android:text="RadioButton"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rbAnswer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#888888"
                    android:text="RadioButton"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rbAnswer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#888888"
                    android:text="RadioButton"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rbAnswer5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#888888"
                    android:text="RadioButton"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
            </RadioGroup>

            <Button
                android:id="@+id/bSumbitVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rgAnswerGroup"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#888888"
                android:text="Submit Vote"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>